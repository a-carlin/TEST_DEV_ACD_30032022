@model DataClient
<h4>Reportes</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card data-tables">
            <div class="card-body table-striped table-no-bordered table-hover dataTable dtr-inline table-full-width">
                <div class="toolbar">
                    <!--        Here you can write extra buttons/actions for the toolbar          -->
                </div>
                <div class="fresh-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover display responsive nowrap" cellspacing="0" width="100%" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Razón social</th>
                                <th>RFC</th>
                                <th>Sucursal</th>
                            </tr>
                        </thead>
                        <tbody>
                             @{
                                foreach (var item in Model.Data) {
                                    <tr>
                                        <td>@item.IdCliente</td>
                                        <td>@(item.Nombre + " " + item.Paterno+ " " + item.Materno)</td>
                                        <td>@item.RazonSocial</td>
                                        <td>@item.RFC</td>
                                        <td>@item.Sucursal</td>
                                    </tr>
                                }  
                              }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Shared/_DataTablesScriptsPartial.cshtml")

@section Scripts {
    <script type="text/javascript" src="~/js/vReporte.js" asp-append-version="true"></script>
}
